<!DOCTYPE html>
<html>
<head>
  <title>Music</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if logged_in? %>
	<p>
		Logged in as <%= current_user.email %>.
		<%= link_to "Log out", session_url, :method => :delete %>
	</p>
<% else %>
	<%= link_to "Sign up", new_user_url %> or
	<%= link_to "Log in", new_session_url %>
<% end %>
<% if !!flash[:notice] %>
<ul>
	<% flash[:notice].each do |notice| %>
		<li><%= notice %></li>
	<% end %>
</ul>
<% end %>

<%= yield %>

</body>
</html>
